@page
@model WebApp.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.SurName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.SurName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Adress)
        </dd>
    </dl>
</div>
<table>
    <tr>
        <th>CourseNumber</th>
        <th>CourseTitle</th>
        <th>Id</th>
    </tr>
    @if (Model.Student.Courses != null)
    {
        @foreach (var course in Model.Student.Courses)
        {
            <tr>
                <td>@course.CourseNumber</td>
                <td>@course.CourseTitle</td>
                <td>@course.Id</td>
            </tr>
        }
    }
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.Email">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
